{
	"name": "polkadot-election-score-stats",
	"version": "0.1.0",
	"description": "Simple script to obtain the latest election scores of Polkadot/Kusama validator set",
	"main": "index.js",
	"scripts": {
		"dev": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/index.ts",
		"start": "./node_modules/.bin/ts-node ./src/index.ts",
		"update": "././node_modules/.bin/ncu -u && yarn",
		"lint": "eslint . --ext .ts --fix",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc --pretty",
		"binary": "yarn run build && rimraf ./binaries && ./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-scripts --python=$(which python3)"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.17.0",
		"@babel/core": "^7.17.0",
		"@babel/preset-typescript": "^7.16.7",
		"@types/node": "^17.0.14",
		"@types/yargs": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"@typescript-eslint/parser": "^5.10.2",
		"eslint": "^8.8.0",
		"nexe": "4.0.0-beta.19",
		"nodemon": "^2.0.15",
		"npm-check-updates": "12.2.1",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "4.5.5"
	},
	"dependencies": {
		"@polkadot/api": "8.2.1",
		"axios": "^0.25.0",
		"bn.js": "^5.2.0",
		"yargs": "^17.3.1"
	}
}
